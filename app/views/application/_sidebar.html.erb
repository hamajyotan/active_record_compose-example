<% sidebar = yield(:sidebar_current) %>

<ul class="nav space-y-1">
  <%= navigation_link_item root_path, title: t(".home"), icon: "house", active: sidebar == "home" %>

  <% if logged_in? %>
    <%= navigation_link_item dashboard_profile_path, title: t(".profile"), icon: "user", active: sidebar == "profile" %>
    <%= navigation_link_item dashboard_password_path, title: t(".password"), icon: "key", active: sidebar == "password" %>
    <%= navigation_link_item new_dashboard_resignation_path, title: t(".resignation"), icon: "circle-arrow-out-up-left", active: sidebar == "resignation" %>
    <%= navigation_link_item session_path, title: t(".sign_out"), icon: "log-out", data: { turbo_method: :delete } %>
  <% else %>
    <%= navigation_link_item new_session_path, title: t(".login"), icon: "log-in", active: sidebar == "login" %>
    <%= navigation_link_item new_user_registration_request_path, title: t(".sign_up"), icon: "check", active: sidebar == "signup" %>
    <%= navigation_delimiter %>
    <%= navigation_link_item locale_path(lang: 'en'), title: t("lang.en"), icon: "languages", data: { turbo_method: :patch } %>
    <%= navigation_link_item locale_path(lang: 'ja'), title: t("lang.ja"), icon: "languages", data: { turbo_method: :patch } %>
  <% end %>

  <% if Rails.env.development? %>
    <%= navigation_delimiter %>
    <%= navigation_link_item letter_opener_web_path, title: "Letter Opener", icon: "mail", target: "_blank" %>
  <% end %>
</ul>
